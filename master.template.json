{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the API Management"
      }
    },
    "BaseUrl": {
      "type": "string",
      "metadata": {
        "description": "Base URL of the repository that contains this template"
      }
    },
    "DeploymentMode": {
      "type": "string",
      "allowedValues": [
        "Incremental",
        "Complete"
      ],
      "metadata": {
        "description": "Mode for linked templates deployment (APIs, products, etc.)"
      }
    },
    "Apis": {
      "type": "array",
      "metadata": {
        "description": "List of objects describing APIs to create: { name: string, products: array of strings }"
      }
    }
  },
  "resources": [
    {
      "properties": {
        "mode": ["parameters('DeploymentMode')"],
        "templateLink": {
          "uri": "[concat(parameters('BaseUrl'), '/global-policy.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "BaseUrl": {
            "value": "[parameters('BaseUrl')]"
          }
        }
      },
      "name": "globalPolicyTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01"
    },
    {
      "properties": {
        "mode": ["parameters('DeploymentMode')"],
        "templateLink": {
          "uri": "[concat(parameters('BaseUrl'), '/products.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "BaseUrl": {
            "value": "[parameters('BaseUrl')]"
          }
        }
      },
      "name": "productsTemplate",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01"
    },
    {
      "copy": {
        "name": "apis-copy",
        "count": "[length(parameters('Apis'))]"
      },
      "properties": {
        "mode": ["parameters('DeploymentMode')"],
        "templateLink": {
          "uri": "[concat(parameters('BaseUrl'), '/', parameters('Apis')[copyIndex()].name, '/template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "ApimServiceName": {
            "value": "[parameters('ApimServiceName')]"
          },
          "BaseUrl": {
            "value": "[concat(parameters('BaseUrl'), '/', parameters('Apis')[copyIndex()].name)]"
          },
          "Products": {
            "value": "[parameters('Apis')[copyIndex()].products]"
          }
        }
      },
      "name": "[concat('apiTemplate-', parameters('Apis')[copyIndex()].name)]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2018-01-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'globalPolicyTemplate')]",
        "[resourceId('Microsoft.Resources/deployments', 'productsTemplate')]"
      ]
    }
  ]
}
